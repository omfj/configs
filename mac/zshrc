# Aliases

## Better ls

alias l="exa"
alias ls="exa"
alias la="exa -a"
alias ll="exa -l"
alias lla="exa -la"

alias v="nvim"
alias vi="nvim"
alias vim="nvim"

alias cat="bat"

## Cargo

export CARGO_NAME="Ole Magnus Johnsen"
