## To folders

export DOTFILES="$HOME/Documents/github/dotfiles"
alias echodb="psql -h $(ifconfig -u | grep 'inet ' | grep -v 127.0.0.1 | cut -d\  -f2 | head -1) -p 5432 -U postgres"
alias front="cd $HOME/Documents/github/echo-web/frontend"
alias back="cd $HOME/Documents/github/echo-web/backend"
alias github="cd $HOME/Documents/github/"
alias dots="cd $DOTFILES"

# Start starship

eval "$(starship init zsh)"

